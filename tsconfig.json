{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "lib": ["dom", "es2015"],
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "demo/**/*",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
